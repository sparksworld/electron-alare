{
  "name": "arale",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "clear": "rimraf dist && rimraf build",
    "dev": "nodemon -w src --exec 'npm run compile -- --inspect=5858' -e ts",
    "compile": "npm run clear && tsc && dotenv -e .env electron ./dist/index.js",
    "make": "npm run clear && tsc && electron-builder build --x64",
    "make:linux": "npm run clear &&  && tsc && electron-builder build -l --x64",
    "make:window": "npm run clear && tsc && electron-builder build -w --x64"
  },
  "build": {
    "productName": "arale",
    "appId": "com.arale.app",
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "appImage"
    }
  },
  "author": "spark",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.0.1",
    "dotenv-cli": "^7.2.1",
    "electron": "^24.4.0",
    "electron-builder": "^23.6.0",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.1",
    "typescript": "^5.0.4"
  }
}
