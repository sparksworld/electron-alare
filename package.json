{
  "name": "arale",
  "version": "1.0.0",
  "description": "",
  "main": ".build/main/index.js",
  "scripts": {
    "clear": "rimraf .build/* && rimraf release/*",
    "dev": "npm run dev:renderer & nodemon -w src/main --exec \"npm run dev:main && npm run electron\" -e ts",
    "dev:main": "webpack --config webpack.main.js --mode development --env APP_ENV=development",
    "dev:renderer": "webpack-dev-server --config webpack.renderer.js --mode development --env APP_ENV=development",
    "build:main": "npm run clear && webpack --config webpack.main.js --mode production --env APP_ENV=production",
    "build:renderer": "npm run clear && webpack --config webpack.renderer.js --mode production --env APP_ENV=production",
    "electron": "electron ./.build/main/index.js",
    "start": "npm run clear && npm run dev:main & npm run dev:renderer && npm run electron",
    "make": "npm run build:main && npm run build:renderer && electron-builder build --x64",
    "make:linux": "npm run build:main && npm run build:renderer && electron-builder build -l --x64",
    "make:window": "npm run build:main && npm run build:renderer && electron-builder build -w --x64"
  },
  "build": {
    "productName": "arale",
    "appId": "com.arale.app",
    "files": [
      ".build/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "icon": ".build/renderer/logo.png",
      "target": "dmg",
      "artifactName": "${productName}-${platform}-${arch}-${version}.${ext}"
    },
    "linux": {
      "target": "appImage"
    }
  },
  "author": "spark",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.22.1",
    "@babel/preset-env": "^7.22.4",
    "@babel/preset-react": "^7.22.3",
    "@types/react": "^18.2.7",
    "@types/react-dom": "^18.2.4",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "concurrently": "^8.0.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "dotenv-cli": "^7.2.1",
    "dotenv-webpack": "^8.0.1",
    "electron": "^24.4.0",
    "electron-builder": "^23.6.0",
    "electron-is-dev": "^2.0.0",
    "glob": "^10.2.6",
    "html-webpack-plugin": "^5.5.1",
    "less": "^4.1.3",
    "less-loader": "^11.1.1",
    "mini-css-extract-plugin": "^2.7.6",
    "nodemon": "^2.0.22",
    "postcss-loader": "^7.3.2",
    "postcss-preset-env": "^8.4.1",
    "rimraf": "^5.0.1",
    "ts-loader": "^9.4.3",
    "typescript": "^5.0.4",
    "webpack": "^5.84.1",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^4.15.0",
    "webpack-merge": "^5.9.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "last 1 ie version"
    ]
  }
}
